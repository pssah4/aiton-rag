# AITON-RAG Environment Configuration

# OpenAI API Configuration (Required for Actions processing)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your_secret_key_here

# Custom GPT Actions API Configuration
ACTIONS_API_KEY=your_actions_api_key_here
ACTIONS_API_VERSION=1.0
CORS_ORIGINS=*

# File Processing Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=pdf,docx,txt,html,md
UPLOAD_FOLDER=data/uploads
RAG_FOLDER=data/rag
KNOWLEDGE_BASE_FOLDER=data/knowledge_base

# Security Configuration
RATE_LIMIT_PER_MINUTE=60
ENABLE_FILE_VALIDATION=True
ENABLE_VIRUS_SCAN=False

# Deployment Configuration
PORT=5000
HOST=0.0.0.0
DEPLOYMENT_URL=http://localhost:5000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/aiton-rag.log
