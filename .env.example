# AITON-RAG Environment Configuration
# Kopiere diese Datei zu .env und f√ºlle die Werte aus

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here

# API Configuration
API_KEY=aiton-rag-api-key-generate-random
API_HOST=0.0.0.0
API_PORT=5000

# File Processing Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
SUPPORTED_EXTENSIONS=.pdf,.docx,.txt,.html,.md,.csv

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/aiton-rag.log

# Custom GPT Actions Configuration
ACTIONS_API_VERSION=1.0
ACTIONS_BASE_URL=http://localhost:5000

# Data Directories
UPLOADS_DIR=data/uploads
RAG_DIR=data/rag
KNOWLEDGE_BASE_DIR=data/knowledge_base